'use client';

import { useState } from 'react';
import Image from 'next/image';
import Link from 'next/link';

export default function WorkshopPage() {
  const [showModal, setShowModal] = useState(false);
  const [formData, setFormData] = useState({
    firstName: '',
    email: '',
  });
  const [isSubmitting, setIsSubmitting] = useState(false);
  const [submitMessage, setSubmitMessage] = useState('');

  const handleSubmit = async (e: React.FormEvent) => {
    e.preventDefault();
    setIsSubmitting(true);
    
    try {
      // Replace YOUR_FORM_ID with your ConvertKit form ID
      const response = await fetch('https://api.convertkit.com/v3/forms/YOUR_FORM_ID/subscribe', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          api_key: process.env.NEXT_PUBLIC_CONVERTKIT_API_KEY,
          first_name: formData.firstName,
          email: formData.email,
        }),
      });

      if (response.ok) {
        setSubmitMessage('Success! Check your email for next steps.');
        setFormData({ firstName: '', email: '' });
        setTimeout(() => {
          setShowModal(false);
          setSubmitMessage('');
        }, 3000);
      } else {
        setSubmitMessage('Something went wrong. Please try again.');
      }
    } catch (error) {
      setSubmitMessage('Something went wrong. Please try again.');
    }
    
    setIsSubmitting(false);
  };

  return (
    <div className="min-h-screen bg-white">
      {/* Header - matches your existing site */}
      <nav className="fixed top-0 w-full bg-white border-b border-gray-200 z-50">
        <div className="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
          <div className="flex justify-between items-center h-16">
            <Link href="/" className="flex items-center space-x-2">
              {/* Add your logo here */}
              <span className="text-xl font-bold text-gray-900">Non-Linear Careers</span>
            </Link>
            <div className="hidden md:flex space-x-8">
              <Link href="/" className="text-gray-700 hover:text-gray-900">Home</Link>
              <Link href="/quiz" className="text-gray-700 hover:text-gray-900">Take Quiz</Link>
              <Link href="/#about" className="text-gray-700 hover:text-gray-900">About</Link>
              <Link href="/workshop" className="text-gray-900 font-semibold">Workshop</Link>
              <Link href="/#speaker" className="text-gray-700 hover:text-gray-900">Work with me</Link>
            </div>
          </div>
        </div>
      </nav>

      {/* Hero Section */}
      <section className="pt-24 pb-16 px-4 sm:px-6 lg:px-8 bg-gradient-to-b from-blue-50 to-white">
        <div className="max-w-4xl mx-auto text-center">
          <h1 className="text-4xl md:text-5xl font-bold text-gray-900 mb-6">
            Your Career Doesn't Have to Be Linear to Be Successful
          </h1>
          <p className="text-xl text-gray-600 mb-4">
            The Non-Linear Career Workshop
          </p>
          <p className="text-lg text-gray-600 mb-8">
            A 4-Week Intensive for Career Changers, Pivot-Seekers & Portfolio Builders
          </p>
          <div className="flex flex-col sm:flex-row gap-4 justify-center">
            <button
              onClick={() => setShowModal(true)}
              className="bg-blue-600 text-white px-8 py-4 rounded-lg text-lg font-semibold hover:bg-blue-700 transition"
            >
              Register Your Interest
            </button>
            <Link
              href="#details"
              className="bg-white text-blue-600 px-8 py-4 rounded-lg text-lg font-semibold border-2 border-blue-600 hover:bg-blue-50 transition"
            >
              Learn More
            </Link>
          </div>
          <p className="mt-6 text-sm text-gray-500">
            Investment: $347 | Starting March 2026 | Limited Spots Available
          </p>
        </div>
      </section>

      {/* What You'll Create Section */}
      <section className="py-16 px-4 sm:px-6 lg:px-8 bg-white" id="details">
        <div className="max-w-6xl mx-auto">
          <h2 className="text-3xl font-bold text-gray-900 mb-12 text-center">
            What You'll Walk Away With
          </h2>
          <div className="grid md:grid-cols-3 gap-8">
            <div className="text-center p-6 bg-blue-50 rounded-lg">
              <div className="text-4xl mb-4">üéØ</div>
              <h3 className="text-xl font-semibold mb-3">Clear Career Goals</h3>
              <p className="text-gray-600">
                A structured framework for your career aspirations‚Äîno more "I think I want to do... something?"
              </p>
            </div>
            <div className="text-center p-6 bg-blue-50 rounded-lg">
              <div className="text-4xl mb-4">üó∫Ô∏è</div>
              <h3 className="text-xl font-semibold mb-3">Your Pivot Strategy</h3>
              <p className="text-gray-600">
                A customized roadmap tailored to YOUR unique skills, values, and vision
              </p>
            </div>
            <div className="text-center p-6 bg-blue-50 rounded-lg">
              <div className="text-4xl mb-4">‚ú®</div>
              <h3 className="text-xl font-semibold mb-3">Personal Branding Plan</h3>
              <p className="text-gray-600">
                A concrete Q1 & Q2 branding strategy that positions you for your next move
              </p>
            </div>
          </div>
        </div>
      </section>

      {/* What's Included Section */}
      <section className="py-16 px-4 sm:px-6 lg:px-8 bg-gray-50">
        <div className="max-w-4xl mx-auto">
          <h2 className="text-3xl font-bold text-gray-900 mb-12 text-center">
            What's Included
          </h2>
          <div className="grid md:grid-cols-2 gap-6">
            {[
              { icon: 'üíª', title: 'Virtual Cohort-Based Classes', desc: 'Work through exercises and frameworks together in live sessions' },
              { icon: 'üìö', title: 'Complete Career Workbook', desc: 'The full Non-Linear Career Workbook included (yours to keep)' },
              { icon: 'üé•', title: 'Asynchronous Resources', desc: 'Classes and materials you can revisit anytime at your own pace' },
              { icon: 'ü§ù', title: 'Virtual Community', desc: 'Connect with fellow career explorers for support and accountability' },
              { icon: '‚ö°', title: 'Proven Frameworks', desc: 'Battle-tested exercises that have helped dozens of professionals pivot' },
              { icon: 'üìÖ', title: 'Q1 & Q2 Action Plans', desc: 'Leave with concrete next steps, not just inspiration' },
            ].map((item, index) => (
              <div key={index} className="flex items-start space-x-4 p-4 bg-white rounded-lg">
                <div className="text-3xl flex-shrink-0">{item.icon}</div>
                <div>
                  <h3 className="font-semibold text-lg mb-1">{item.title}</h3>
                  <p className="text-gray-600">{item.desc}</p>
                </div>
              </div>
            ))}
          </div>
        </div>
      </section>

      {/* Who This Is For Section */}
      <section className="py-16 px-4 sm:px-6 lg:px-8 bg-white">
        <div className="max-w-4xl mx-auto">
          <h2 className="text-3xl font-bold text-gray-900 mb-12 text-center">
            Is This Workshop For You?
          </h2>
          <div className="space-y-4">
            {[
              'You\'re a mid-career professional craving a pivot but don\'t know where to start',
              'You\'re a recent grad overwhelmed by options and traditional career advice',
              'You have multiple interests and want to build a portfolio career',
              'You\'re tired of following someone else\'s career blueprint',
